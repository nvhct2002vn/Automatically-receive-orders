<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thiết lập tiêu chí lọc đơn hàng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/filter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên thiết lập (VD: Quán gần nhà)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên quán ăn (để trống nếu không lọc)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/restaurant_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ quán (để trống nếu không lọc)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/delivery_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Khu vực giao hàng (để trống nếu không lọc)"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu thiết lập"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/show_saved_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Danh sách đã lưu"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <Switch
        android:id="@+id/filter_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bật chế độ lọc đơn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/enable_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kích hoạt dịch vụ" />
</LinearLayout>